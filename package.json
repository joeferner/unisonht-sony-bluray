{
  "name": "unisonht-sony-bluray",
  "version": "0.0.1",
  "description": "UnisonHT Plugin for Sony Bluray players",
  "main": "dist/index.js",
  "types": "src/index.ts",
  "scripts": {
    "test:watch": "nodemon ./dist/test.js",
    "build": "tsc",
    "build:watch": "tsc --watch",
    "format": "prettier --write \"src/**/*.ts\" \"src/**/*.js\"",
    "lint": "tslint -p tsconfig.json",
    "prepare": "npm run build",
    "prepublishOnly": "npm run lint"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/joeferner/unisonht-sony-bluray.git"
  },
  "keywords": [
    "unisonht",
    "sony",
    "bluray"
  ],
  "author": "Joe Ferner <joe@fernsroth.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/joeferner/unisonht-sony-bluray/issues"
  },
  "homepage": "https://github.com/joeferner/unisonht-sony-bluray#readme",
  "devDependencies": {
    "@types/debug": "^4.1.5",
    "@types/node": "^12.7.1",
    "@types/promptly": "^1.1.28",
    "@types/xmldom": "^0.1.29",
    "husky": "^3.0.3",
    "lint-staged": "^9.2.1",
    "nodemon": "^1.19.1",
    "prettier": "^1.18.2",
    "tslint": "^5.18.0",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^3.5.3"
  },
  "dependencies": {
    "@unisonht/unisonht": "0.0.x",
    "axios": "^0.19.0",
    "debug": "^4.1.1",
    "getmac": "^1.4.6",
    "promptly": "^3.0.3",
    "wol": "^1.0.6",
    "xmldom": "^0.1.27",
    "xpath": "0.0.27"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && npm run lint"
    }
  },
  "lint-staged": {
    "*.ts": [
      "npm run format",
      "git add"
    ]
  }
}
